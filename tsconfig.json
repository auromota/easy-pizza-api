{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "outDir": "app"
  },
  "exclude": [
    "logs",
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "src/*"
  ]
}